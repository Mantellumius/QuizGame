@page "/CreateQuiz"
@attribute [AllowAnonymous]
@inject HttpClient HttpClient
@inject ISnackbar Snackbar
@using QuizGame.Client.Components.CreateQuiz

@if (_quizId is null)
{
    <CreateQuizForm Snackbar="Snackbar" OnSubmit="quizId => _quizId = quizId"/>
}
else
{
    <AddQuestions Snackbar="Snackbar" QuizId="_quizId"/>
}

@code {

    private Guid? _quizId;

}