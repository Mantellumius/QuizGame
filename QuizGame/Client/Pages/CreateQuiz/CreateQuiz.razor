@page "/CreateQuiz"
@using QuizGame.Client.Components.CreateQuiz
@using QuizGame.Client.Services
@attribute [Authorize]
@inject ISnackbar Snackbar
@inject QuizService QuizService
@if (_quizId is null)
{
    <CreateQuizForm Snackbar="Snackbar" OnSubmit="quizId => _quizId = quizId" QuizService="QuizService"/>
}
else
{
    <AddQuestions Snackbar="Snackbar" QuizId="_quizId" QuizService="QuizService"/>
}

@code {

    private Guid? _quizId;

}