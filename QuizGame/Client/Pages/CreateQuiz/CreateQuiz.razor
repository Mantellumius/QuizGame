@page "/CreateQuiz"
@attribute [Authorize]
@inject ISnackbar Snackbar
@inject QuizService QuizService

@if (!_isQuizFormSubmitted)
{
    <EditQuizForm Snackbar="Snackbar" OnSubmit="OnQuizFormSubmit" QuizService="QuizService"/>
}
else
{
    <SetQuestionsForm Snackbar="Snackbar" QuizId="_quizId" QuizService="QuizService"/>
}

@code {

    private Guid _quizId;
    private bool _isQuizFormSubmitted;

    private void OnQuizFormSubmit(Guid quizId)
    {
        _quizId = quizId;
        _isQuizFormSubmitted = true;
    }
}